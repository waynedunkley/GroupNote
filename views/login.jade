doctype 5
html
	head
		link(rel='stylesheet', href='/stylesheet/bootstrap-responsive.css')
		link(rel='stylesheet', href='/stylesheet/bootstrap.css')
		link(rel='stylesheet', href='/stylesheet/style.css')
		script(src='/javascript/jquery-1.8.2.min.js')
		script(src='/javascript/login.js')
		script(src='/javascript/bootstrap.js')
	body
		div(class='navbar navbar-static-top')
			div(class='navbar-inner')
				a(class='brand', href='/') GroupNote
					
		div(class='container-fluid main')
			div(class='loginformcont')
				form(id='loginform', action='', method='POST', class='form-horizontal well')
					p(class='lead center') GroupNote Log In
					legend
					div(class='control-group', id='username-control-group')
						label(for='username', class='control-label') Username
						div(class='controls')
							input(type='text', name='username', id='username', maxlength='20')
							span(class='help-inline')
					div(class='control-group', id='password1-control-group')
						label(for='password1', class='control-label') Password
						div(class='controls')
							input(type='password', name='password', maxlength='50')
							span(class='help-inline')
					div(class='control-group')
						div(class='controls')
							input(type='submit', value='Log In', class='btn btn-primary')
							label(for='rememberme', class="checkbox", id='rememberme') Remember me
								input(type='checkbox', name='rememberme', checked='checked')
					legend
					a(href='/register', class='offset2') Forgotten details
					
				
			div(class='forgottenformcont')
				form(id='fogottenfom', action='', method='post', class='form-horizontal well')
					p(class='lead center') Not yet registered?
					legend
					a(href='/register', class='offset2')
						button(class='btn btn-info', id='regbtn', type='button') Register

					